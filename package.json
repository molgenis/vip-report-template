{
  "name": "@molgenis/vip-report-template",
  "version": "3.0.0",
  "description": "Report Template for Variant Call Format (VCF) Report Generator",
  "scripts": {
    "build": "vite build",
    "build-dev": "vite build --mode dev",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format": "prettier --write src/**/*.{tsx,ts}",
    "lint": "eslint src/**/*.{tsx,ts}",
    "prepare": "husky install",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "license": "LGPL-3.0",
  "devDependencies": {
    "@molgenis/vite-plugin-inline": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "bulma": "^0.9.4",
    "c8": "^7.11.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-solid": "^0.7.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.0",
    "sass": "^1.52.3",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-plugin-solid": "^2.2.6",
    "vitest": "^0.14.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@molgenis/vip-report-api": "^3.5.2",
    "@molgenis/vip-report-vcf": "^1.2.2",
    "base64-js": "^1.5.1",
    "igv": "^2.12.6",
    "solid-app-router": "^0.3.3",
    "solid-js": "^1.4.4"
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "eslint",
      "prettier --write"
    ]
  },
  "bugs": {
    "url": "https://github.com/molgenis/vip-report-template/issues"
  },
  "homepage": "https://github.com/molgenis/vip-report-template#readme",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/molgenis/vip-report-template.git"
  }
}
